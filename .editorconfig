[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
spaces_around_brackets = outside
spaces_around_operators = true

[*.md]
trim_trailing_whitespace = false

[*.{php, js}]
quote_type = single

[Makefile]
indent_style = tab

[*.mk]
indent_style = tab
